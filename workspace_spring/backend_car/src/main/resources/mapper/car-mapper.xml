<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.green.backend_car.car.mapper.CarMapper">

	<!-- car_info 테이블에서 조회한 결과를 받을 정의문 -->
	<resultMap id="car" type="com.green.backend_car.car.dto.CarDTO">
		<id     column="MODEL_NUM"  property="modelNum" />
		<result column="MODEL_NAME" property="modelName" />
		<result column="PRICE" 		property="price" />
		<result column="CAR_MAKER"  property="carMaker" />
	</resultMap>

	<!-- 차량 등록 -->
	<insert id="regCar">
		INSERT INTO CAR_INFO (
			MODEL_NAME
			, PRICE
			, CAR_MAKER
		) VALUES (
			#{modelName}
			, #{price}
			, #{carMaker}
		)
	</insert>

	<!-- 차량 목록 조회 -->
	<select id="getCarList" resultMap="car">
		SELECT MODEL_NUM
			, MODEL_NAME
			, CAR_MAKER
		FROM CAR_INFO
		ORDER BY MODEL_NUM DESC
	</select>
</mapper>































